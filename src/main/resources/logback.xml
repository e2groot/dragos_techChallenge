<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="Console-Appender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS} [%-10.10thread] %5level %logger{12} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="Console-Appender" />
    </root>
</configuration>